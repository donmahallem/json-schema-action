{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "rootDir": "./src",
    },
    "typeAcquisition": {
        "enable": true
    },
    "baseUrl": "./src",
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}
